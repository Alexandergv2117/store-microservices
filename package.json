{
  "name": "store",
  "version": "1.0.0",
  "description": "This is a store online, implement microservices, docker, terraform, kubernetes and AWS",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "AWS",
    "terraform",
    "k8",
    "reactjs",
    "nextjs",
    "docker",
    "nestjs",
    "microservices",
    "typescript",
    "ts",
    "go"
  ],
  "author": {
    "name": "Alexander Garcia",
    "email": "alexandergv2117@gmail.com"
  },
  "license": "ISC",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "react"
    ],
    "ignorePatterns": [
      ".github/*",
      "node_modules/",
      "*/**/node_modules/",
      "*/**/dist/",
      "*/**/coverage/",
      "*/**/build/"
    ],
    "rules": {
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "7.1.0",
    "@typescript-eslint/parser": "7.1.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.33.2",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5"
  },
  "dependencies": {
    "@nextui-org/react": "2.2.10",
    "framer-motion": "11.0.20"
  }
}
